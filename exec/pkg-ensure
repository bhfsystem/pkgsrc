#!/usr/bin/env bash

function main {
  local shome="$(cd -P -- "${BASH_SOURCE%/*}/.." && pwd -P)"
  source "$shome/script/profile"

  local nm_pkg="$1"; shift
  local nm_build="${1:-$nm_pkg}"

  case "$nm_build" in
    bootstrap)
      if ! pkg install "$nm_build"; then
        if [[ -n "${PKG_BINARY_ONLY:-}" ]]; then
          return 1
        fi

        pkg package"$nm_build"
      fi
      ;;
    *)
      if ! type -P pkgin >/dev/null || ! pkgin -y install "${nm_pkg#*/}"; then
        if [[ -n "${PKG_BINARY_ONLY:-}" ]]; then
          return 1
        fi

        pkg package "$nm_build" || true
        "$shome/script/update"
        if type -P pkgin >/dev/null; then
          pkgin -y install "${nm_pkg#*/}"
        else
          pkg_add "$(set +f; ls -trhd "${PACKAGES}/All/"${nm_pkg#*/}-*.tgz 2>/dev/null | tail -1)"
          "$shome/script/update"
        fi
      fi
      ;;
  esac
}

source sub "$0" "$@"
