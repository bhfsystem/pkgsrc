#!/usr/bin/env bash

function main {
  local shome="$(cd -P -- "${BASH_SOURCE%/*}/.." && pwd -P)"
  source "$shome/script/profile"

  local nm_pkg="$1"; shift
  local nm_build="${1:-$nm_pkg}"

  pkg build "$nm_build" || { pkg upgrade "$nm_build" && pkg package "$nm_build"; }
}

source sub "$0" "$@"
