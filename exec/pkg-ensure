#!/usr/bin/env bash

function main {
  local shome="$(cd -P -- "${BASH_SOURCE%/*}/.." && pwd -P)"
  source "$shome/script/profile"

  local nm_pkg="$1"; shift
  local nm_build="${1:-$nm_pkg}"

  if ! pkgin install "$nm_build"; then
    pkg package "$nm_build"
    pkg install "$nm_build"
    "$shome/script/update"
  fi
}

source sub "$0" "$@"
