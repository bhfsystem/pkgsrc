#!/usr/bin/env bash

function main {
  local shome="$(cd -P -- "${BASH_SOURCE%/*}/.." && pwd -P)"
  source "$shome/script/profile"

  local nm_pkg="$1"; shift
  local nm_build="${1:-$nm_pkg}"

  case "$nm_build" in
    bootstrap)
      if ! pkg install "$nm_build"; then
        if [[ -n "${PKG_BINARY_ONLY:-}" ]]; then
          return 1
        fi

        pkg package"$nm_build"
      fi
      ;;
    *)
      if ! pkgin install "$nm_build"; then
        if [[ -n "${PKG_BINARY_ONLY:-}" ]]; then
          return 1
        fi

        if pkg package "$nm_build"; then
          "$shome/script/update"
          pkgin install "$nm_build" || true
        fi
      fi
      ;;
  esac
}

source sub "$0" "$@"
