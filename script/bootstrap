#!/usr/bin/env bash

function bootstrap {
  local shome="$(cd -P -- "$(dirname -- "$BASH_SOURCE")/.." && pwd -P)"
  source "$shome/script/profile"

  if [[ ! -d "$shome/vendor/pkgsrc" ]]; then
    git clone --depth 1 git@github.com:jsonn/pkgsrc "$shome/vendor/pkgsrc" || true
  fi

  case "$(uname -s)" in
    Linux)
      sudo aptitude install -y gcc-multilib g++-multilib libgoogle-perftools-dev # TODO what relies on these packages?
      ;;
  esac

  if [[ -n "${PKG_HOME:-}" ]]; then
    if [[ ! -d "${PKG_HOME}" ]]; then
      if ! install -d -u "$(id -un)" -g "$(id -gn)" "${PKG_HOME}"; then
        sudo install -d -u "$(id -un)" -g "$(id -gn)" "${PKG_HOME}" || true
      fi
    fi
    pkg ensure bootstrap
    pkg pkgtools/pkg_rolling-replace
  fi
}

bootstrap
