#!/usr/bin/env bash

function bootstrap {
  local shome="$(unset CDPATH; cd -P -- "$(dirname -- "$BASH_SOURCE")/.." && pwd -P)"
  export PKG_HOME="$shome"

  echo info git clone -b pkgsrc_2015Q3 git@github.com:defn/pkgsrc vendor/pkgsrc
  git clone -b pkgsrc_2015Q3 ~/work/vendor-pkgsrc "$shome/vendor/pkgsrc"

  require pkgsrc
  app compile bmake
  app compile pkgsrc misc/getopt
}

bootstrap
