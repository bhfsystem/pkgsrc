#!/usr/bin/env bash

function id_install {
  local nm_os
  case "$(uname -s)" in
    Darwin|Linux)
      nm_os="$(uname -s)_$(uname -r | cut -d- -f1 | cut -d. -f1-3)"
      ;;
    *)
      nm_os="$(uname -s)"
      ;;
  esac

  echo "$nm_os/$PKG_HOME" | tr / _ | tr . _ | perl -pe 's{__+}{_}'
}

function profile {
  local shome="$(cd -P -- "$(dirname -- "$BASH_SOURCE")/.." && pwd -P)"

  if [[ -z "${PKG_HOME:-}" ]]; then
    PATH="$shome/bin:$shome/exec:$PATH"
    return 0
  fi

  PATH="$shome/bin:$PKG_HOME/install/sbin:$PKG_HOME/install/bin:$PKG_HOME/install/gnu/bin:$shome/exec:$PATH"

  # TODO figure out which variables are env, make, conf
  local pth_cache="${BASEBOX_CACHE:-/vagrant}"

  export ID_INSTALL="$(id_install)"

  export DISTDIR="$pth_cache/distfiles"
  export PACKAGES="$pth_cache/packages/${ID_INSTALL}"
  export WRKOBJDIR="${TMP:-${TMPDIR:-/tmp}}/pkgsrc_${ID_INSTALL}"

  export PKG_OPT="env MAKEFLAGS= MFLAGS= PACKAGES=$PACKAGES WRKOBJDIR=$WRKOBJDIR DISTDIR=$DISTDIR PKG_RCD_SCRIPTS=no SKIP_LICENSE_CHECK=yes"

  export BMAKE="$PKG_OPT $PKG_HOME/install/bin/bmake"
  export PKGADD="$PKG_OPT PKG_PATH=$PACKAGES/All $PKG_HOME/install/sbin/pkg_add -uu"

  export SH="$(which bash)"
}

profile
